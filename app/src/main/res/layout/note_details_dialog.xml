<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/noteDetailsTitleText"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="@dimen/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noteDetailsDescriptionText"
        android:layout_width="328dp"
        android:layout_height="314dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="@dimen/loginBtnTextSize"
        app:layout_constraintStart_toStartOf="@+id/noteDetailsTitleText"
        app:layout_constraintTop_toBottomOf="@+id/noteDetailsTitleText" />
</androidx.constraintlayout.widget.ConstraintLayout>