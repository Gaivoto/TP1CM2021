<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8D2"
    tools:context=".activities.ReportMap">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="65dp"
        android:onClick="goToReportCreation"
        android:src="@drawable/fab_add"
        app:backgroundTint="#C8C8D7"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        tools:context=".activities.ReportMap"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C8C8D7"
        app:layout_constraintBottom_toTopOf="@+id/map"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/filterDistanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/distance"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filterTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/typeDisplay"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/filterDistanceEdit"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/filterTypeEdit"
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/thin_border"
            android:entries="@array/typeFilter"
            app:layout_constraintStart_toEndOf="@+id/filterTypeText"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/filterSearchBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:onClick="filterReports"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filterTypeEdit"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/filterDistanceEdit"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/thin_border"
            android:ems="10"
            android:inputType="number"
            android:maxLength="9"
            app:layout_constraintStart_toEndOf="@+id/filterDistanceText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF222222"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>